<?xml version="1.0" encoding="UTF-8"?>
<configuration status="debug">
  <appenders>
    <console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n"/>
    </console>

    <RollingFile name="RollingFileInfo" fileName="${sys:user.home}/logs/multievel/info.log"
                 filePattern="${sys:user.home}/logs/multievel/$${date:yyyy-MM}/info-%d{yyyy-MM-dd}-%i.log">
      <Filters>
        <ThresholdFilter level="INFO"/>
        <ThresholdFilter level="WARN" onMatch="DENY"
                         onMismatch="NEUTRAL"/>
      </Filters>
      <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n"/>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
    </RollingFile>

    <RollingFile name="RollingFileWarn" fileName="${sys:user.home}/logs/multievel/warn.log"
                 filePattern="${sys:user.home}/logs/multievel/$${date:yyyy-MM}/warn-%d{yyyy-MM-dd}-%i.log">
      <Filters>
        <ThresholdFilter level="WARN"/>
        <ThresholdFilter level="ERROR" onMatch="DENY"
                         onMismatch="NEUTRAL"/>
      </Filters>
      <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n"/>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
    </RollingFile>

    <RollingFile name="RollingFileError" fileName="${sys:user.home}/logs/multievel/error.log"
                 filePattern="${sys:user.home}/logs/multievel/$${date:yyyy-MM}/error-%d{yyyy-MM-dd}-%i.log">
      <ThresholdFilter level="ERROR"/>
      <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n"/>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
    </RollingFile>
  </appenders>

  <loggers>
    <!--过滤掉spring和hibernate的一些无用的debug信息 -->
    <!--<logger name="org.springframework" level="INFO">-->
    <!--</logger>-->
    <!--<logger name="org.hibernate" level="INFO">-->
    <!--</logger>-->

    <root level="debug">
      <appender-ref ref="Console"/>
      <appender-ref ref="RollingFileInfo"/>
      <appender-ref ref="RollingFileWarn"/>
      <appender-ref ref="RollingFileError"/>
    </root>
  </loggers>
</configuration>
